= form_for @collaborator, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      \/Collaborator
    .control-group
      = f.label :first_name, :class => 'control-label'
      .controls
        = f.text_field :first_name, :class => 'text_field'
    .control-group
      = f.label :last_name, :class => 'control-label'
      .controls
        = f.text_field :last_name, :class => 'text_field'
    .control-group
      = f.label :website, :class => 'control-label'
      .controls
        = f.text_field :website, :class => 'text_field'
    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.text_field :email, :class => 'text_field'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', collaborators_path, :class => 'btn'
